<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="GrandChita\EntityBundle\Repository\GrandDocumentsRepository" name="GrandChita\EntityBundle\Entity\GrandDocuments">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="true"/>

      <many-to-many target-entity="Application\Sonata\MediaBundle\Entity\GalleryHasMedia" field="gallery">
          <join-table name="document_galleries_group">
              <join-columns>
                  <join-column name="document_gallery_id" referenced-column-name="id"/>
              </join-columns>
              <inverse-join-columns>
                  <join-column name="document_group_id" referenced-column-name="id" />
              </inverse-join-columns>
          </join-table>
      </many-to-many>
  </entity>
</doctrine-mapping>
