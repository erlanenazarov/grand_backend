{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/grandchitaapp/css/popup.css') }}" />
{% endblock %}

{% block title %}Дипломы и сертификаты{% endblock %}

{% block page_title %}
    Дипломы и сертификаты
{% endblock %}

{% block content %}
    <div class="content-carcass">
        <div class="staff-grid">
            {% for certificate in certificates %}
                <div class="staff-item">
                    <div class="staff-preview">
                        <a href="{% path certificate.preview, 'reference' %}" class="popup-trigger">
                            <img src="{% path certificate.preview, 'small' %}" />
                        </a>
                    </div>
                    {% if certificate.title %}
                        <div class="staff-name">
                            {{ certificate.title }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/grandchitaapp/js/popup.min.js') }}" ></script>
    <script>
        $(document).ready(function() {
            $('.popup-trigger').magnificPopup({
                type: 'image'
            });
        });
    </script>
{% endblock %}
